{
    "name": "sogos/evan",
    "license": "MIT",
    "type": "project",
    "description": "The \"Evan Framework\" distribution",
    "autoload": {
        "psr-0": {
                  "": "src/",
		          "Evan": "lib/"
        }
    },
    "require": {
        "php": ">=5.4.0",
        "twig/twig": "1.13.*@dev",
        "pimple/pimple": "1.0.*@dev",
    	"phpunit/phpunit": "*",
    	"phpunit/php-code-coverage": "*",
    	"phpunit/php-timer": "*",
    	"phpunit/phpunit-mock-objects": "*",
        "doctrine/orm": "*"
    },
    "minimum-stability": "stable",
    "extra": {
        "evan-app-dir": "app",
        "evan-web-dir": "web"
    },
    "config": {
        "bin-dir": "bin/"
    }
}
